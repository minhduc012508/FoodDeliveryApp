<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="100"
    android:padding="20dp"
    android:background="@color/greyBackground">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:text="@string/giohangcuatoi"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/yellow"></TextView>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="55"></androidx.recyclerview.widget.RecyclerView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="25"
        android:weightSum="91"
        android:orientation="vertical"
        android:background="@drawable/bg_20_white"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">
        <com.example.ui_design_3_01.widget.WidgetTextHorizal
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            app:lefttext="Tổng hàng"
            app:righttext="$122.99"
            app:textsize="8dp"
            app:leftAlignment="left"
            app:rightAlignment="right"
            app:textcolor="@color/greyL"
            ></com.example.ui_design_3_01.widget.WidgetTextHorizal>
        <com.example.ui_design_3_01.widget.WidgetTextHorizal
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            app:lefttext="Texs"
            app:righttext="$2"
            app:textsize="8dp"
            app:leftAlignment="left"
            app:rightAlignment="right"
            app:textcolor="@color/greyL"
            ></com.example.ui_design_3_01.widget.WidgetTextHorizal>
        <com.example.ui_design_3_01.widget.WidgetTextHorizal
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            app:lefttext="Delivery services"
            app:righttext="$20"
            app:textsize="8dp"
            app:leftAlignment="left"
            app:rightAlignment="right"
            app:textcolor="@color/greyL"
            ></com.example.ui_design_3_01.widget.WidgetTextHorizal>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@color/greyL"></View>
        <com.example.ui_design_3_01.widget.WidgetTextHorizal
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:layout_marginTop="10dp"
            app:lefttext="Total:"
            app:righttext="$20"
            app:textsize="12dp"
            app:leftStyle="bold"
            app:rightStyle="bold"
            app:leftAlignment="left"
            app:rightAlignment="right"
            app:textcolor="@color/greyL"
            ></com.example.ui_design_3_01.widget.WidgetTextHorizal>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:text="@string/checkout"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@drawable/bg_btn_20_yellow"></Button>
</LinearLayout>