<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="widget_button_vertical">
        <attr name="text" format="string"></attr>
        <attr name="textColor" format="reference|color"></attr>
        <attr name="imgSrc" format="reference|color"></attr>
        <attr name="lineColor" format="reference|color"></attr>
    </declare-styleable>
    <declare-styleable name="widget_text_horizal_2">
        <attr name="lefttext" format="string"></attr>
        <attr name="righttext" format="string"></attr>
        <attr name="textcolor" format="reference|color"></attr>
        <attr name="textsize" format="dimension"></attr>
        <attr name="leftAlignment" format="integer">
            <enum name="center" value="1"></enum>
            <enum name="left" value="0"></enum>
            <enum name="right" value="2"></enum>
        </attr>
        <attr name="rightAlignment" format="integer">
            <enum name="center" value="1"></enum>
            <enum name="left" value="0"></enum>
            <enum name="right" value="2"></enum>
        </attr>
        <attr name="leftStyle" format="integer">
            <enum name="normal" value="0"></enum>
            <enum name="bold" value="1"></enum>
        </attr>
        <attr name="rightStyle" format="integer">
            <enum name="normal" value="0"></enum>
            <enum name="bold" value="1"></enum>
        </attr>
    </declare-styleable>
</resources>